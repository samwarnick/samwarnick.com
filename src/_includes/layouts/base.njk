<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content="{{ eleventy.generator }}" />
		<link
			rel="alternate"
			type="application/atom+xml"
			title="Sam Warnick RSS Feed"
			href="https://samwarnick.com/atom.xml"
		/>
		<link
			rel="alternate"
			type="application/rss+xml"
			title="Sam Warnick RSS Feed"
			href="https://samwarnick.com/rss.xml"
		/>
		<link
			rel="alternate"
			type="application/json"
			title="Sam Warnick JSON Feed"
			href="https://samwarnick.com/json.xml"
		/>
		<meta property="og:title" content="{{title}}" />
		<meta name="description" content="{{summary or metadata.description}}" />
		<meta
			property="og:description"
			content="{{summary or metadata.description}}"
		/>
		<meta property="og:type" content="website">
		{% ogImage "/og-image.og.njk", { title: title or "Sam Warnick", image: ogImage } %}
		<meta name="twitter:card" content="summary_large_image">
		<title>
			{{ title or metadata.title }}{% if title !== 'Sam Warnick' %} â€¢ Sam
			Warnick{% endif %}
		</title>
		<link
			rel="preload"
			href="/assets/fonts/Atkinson-Hyperlegible-Regular-102.woff"
			as="font"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/assets/fonts/Atkinson-Hyperlegible-Italic-102.woff"
			as="font"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/assets/fonts/Atkinson-Hyperlegible-Bold-102.woff"
			as="font"
			crossorigin="anonymous"
		/>
		<link
			rel="preload"
			href="/assets/fonts/Calistoga-Regular.ttf"
			as="font"
			crossorigin="anonymous"
		/>
		{% if searchPage %}
		<link href="/pagefind/pagefind-ui.css" rel="stylesheet">
		<script type="module" src="/assets/js/pagefind-search.js"></script>
		{% endif %}
		<link
			rel="stylesheet"
			href="/assets/css/global.css?{% timestamp %}"
			type="text/css"
		/>
		<link rel="icon" href="/assets/favicon/favicon.ico" sizes="32x32" />
		<link
			rel="icon"
			href="/assets/favicon/icon.svg"
			type="image/svg+xml"
			media="(prefers-color-scheme: light)"
		/>
		<link
			rel="icon"
			href="/assets/favicon/icon-dark.svg"
			type="image/svg+xml"
			media="(prefers-color-scheme: dark)"
		/>
		<link rel="apple-touch-icon" href="/assets/favicon/apple-touch-icon.png" />
		<link rel="manifest" href="/assets/favicon/manifest.webmanifest" />
		<link rel="me" href="mailto:sam@warnick.me" />
		<link rel="micropub" href="https://micropub.warnick.me">
		{%- if site.production -%}
		<script
			src="https://tinylytics.app/embed/MnkDUgWxDsEzVjdiiTLL.js"
			defer
		></script>
		{%- endif -%}
	</head>
	<body>
		{% include "components/site-nav.njk" %}
		<main>{{ content | safe }}</main>
		{% include "components/site-footer.njk" %}
	</body>
</html>
