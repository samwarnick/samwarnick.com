@css {
  h1, h2, h3, h4, h5, h6 {
    @apply font-serif;
  }
  pre, code {
    @apply font-mono;
  }
  .extra-class {
    @apply shadow rounded-lg my-4 text-white leading-normal px-4 py-2 overflow-x-auto;
    background-color: #011627;
  }
  p {
    @apply leading-tight text-base text-black max-w-md;
  }
  .content a {
    @apply text-black no-underline;
  }
  .content p {
    @apply mb-4;
    text-indent: .8em;
  }
  .content img {
    @apply shadow-md;
  }
  .content ol, .content ul {
    @apply my-4;
  }
  .content li {
    @apply mb-2;
  }
  .content h2 {
    @apply mt-6 mb-4;
  }
  .content blockquote {
    @apply bg-grey-lightest shadow rounded-lg px-4 py-2 mb-4 border-l-4 border-blue max-w-sm;
  }
  .content blockquote p {
    margin: 0;
  }
  .content .header-anchor {
    @apply opacity-50 text-grey-dark;
    transition: opacity .3s ease;
  }
  .content .header-anchor:hover {
    @apply opacity-100;
  }
  .nav-link {
    @apply text-lg text-white font-serif font-bold no-underline rounded-lg border-2 border-white px-4 py-2 mx-4 shadow;
    position: relative;
    z-index: 1;
    overflow: hidden;
    transition: box-shadow .3s ease;
  }
  .nav-link::before {
    content: '';
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    @apply bg-white;
    position: absolute;
    z-index: -1;
    opacity: .1;
    transition: opacity .3s ease;
  }
  .nav-link:hover {
    @apply shadow-md;
  }
  .nav-link:hover::before {
    opacity: .25;
  }
  .icon.outbound {
    @apply text-blue-dark;
  }
  /* purgecss start ignore */
  .property, .rule, .tag, .operator {
    color: #7fdbca;
  }

  .keyword {
    color: #c792ea;
  }

  .function, .attr-name, .builtin {
    color: #addb67;
  }

  .string, .attr-value, .class-name {
    color: #ffeb95;
  }

  .boolean {
    color: #ff5874;
  }

  .comment {
    color: #637777;
    font-style: italic;
  }
  ::selection {
    background: #9BF3F0; /* WebKit/Blink Browsers */
  }
  ::-moz-selection {
    background: #9BF3F0; /* Gecko Browsers */
  }

  svg:not(:root).svg-inline--fa {
